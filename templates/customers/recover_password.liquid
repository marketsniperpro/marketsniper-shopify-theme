<div class="auth-page">
  <div class="container">
    <div class="auth-container">
      
      <div class="auth-box">
        {% if form.posted_successfully? %}
          <div class="success-message">
            <h2>Email Sent!</h2>
            <p>We've sent you an email with instructions to reset your password.</p>
            <p class="mt-16">Check your inbox and spam folder.</p>
          </div>
          <a href="/account/login" class="btn btn-primary auth-btn">Back to Login</a>
        {% else %}
          <h2>Forgot Password?</h2>
          <p class="auth-subtitle">Enter your email and we'll send you reset instructions</p>
          
          {% form 'recover_customer_password' %}
            {{ form.errors | default_errors }}
            
            <div class="form-group">
              <label for="recover-email">Email</label>
              <input 
                type="email" 
                name="email" 
                id="recover-email" 
                autocomplete="email"
                required
              >
            </div>
            
            <button type="submit" class="btn btn-primary auth-btn">Send Reset Link</button>
          {% endform %}
          
          <div class="auth-switch">
            Remember your password? 
            <a href="/account/login" class="switch-link">Login</a>
          </div>
        {% endif %}
      </div>
      
    </div>
  </div>
</div>
