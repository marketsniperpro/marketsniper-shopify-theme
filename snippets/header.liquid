{% comment %}
  sections/header.liquid
  Updated site header with CTA button
{% endcomment %}

<nav class="navbar">
  <div class="container">
    <a href="/" class="logo">
      <span class="logo-icon">
        <img src="{{ 'logo.jpg' | asset_url }}" alt="{{ shop.name }}">
      </span>
      <span class="logo-text">{{ shop.name }}</span>
    </a>
    
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li><a href="/pages/features">Features</a></li>
      <li><a href="/pages/products">Products</a></li>
      <li><a href="/pages/contact">Contact</a></li>
      
      <!-- Cart Icon -->
      <li>
        <a href="/cart" class="cart-icon" title="View Cart">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="cart-count">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      </li>
      
      <!-- Login/Account Icon -->
      {% if customer %}
        <li>
          <a href="/account" class="account-icon" title="My Account">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span class="account-name">{{ customer.first_name | default: "Account" }}</span>
          </a>
        </li>
      {% else %}
        <li>
          <a href="/account/login" class="login-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Login
          </a>
        </li>
      {% endif %}
      
    </ul>
    
    <button class="mobile-menu-btn" aria-label="Toggle mobile menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<!-- Mobile Menu Overlay -->
<div class="mobile-menu-overlay"></div>

<div class="mobile-menu">
  <ul class="mobile-nav-links">
    <li><a href="/">Home</a></li>
    <li><a href="/pages/features">Features</a></li>
    <li><a href="/pages/products">Products</a></li>
    <li><a href="/pages/contact">Contact</a></li>
    
    <!-- Cart in Mobile Menu -->
    <li>
      <a href="/cart" class="mobile-cart">
        <span class="mobile-cart-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="mobile-cart-badge">{{ cart.item_count }}</span>
          {% endif %}
        </span>
        Cart
      </a>
    </li>
    
    {% if customer %}
      <li>
        <a href="/account" class="mobile-account">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          {{ customer.first_name | default: "My Account" }}
        </a>
      </li>
      <li>
        <a href="/account/logout" class="mobile-logout">Logout</a>
      </li>
    {% else %}
      <li>
        <a href="/account/login" class="mobile-login">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          Login
        </a>
      </li>
    {% endif %}
    
  </ul>
</div>

<style>
  /* Add padding to body to account for fixed navbar */
  body {
    padding-top: 70px;
  }

  /* Reset any parent stacking contexts */
  body,
  html,
  #shopify-section-header {
    position: relative;
    z-index: auto;
  }

  /* CRITICAL: Override layout.css navbar z-index */
  .navbar {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1000;
    padding: 15px 0;
  }

  .navbar .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    transition: opacity 0.3s ease;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-icon img {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    object-fit: cover;
  }

  .logo-text {
    color: #00ff41;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    margin: 0;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
    font-weight: 500;
  }

  .nav-links a:hover {
    color: #00ff41;
  }

  /* CTA Button */
  .btn-nav {
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    padding: 10px 24px;
    border-radius: 8px;
    font-weight: 700;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.3);
  }

  .btn-nav:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.5);
    color: #000 !important;
  }

  /* Cart Icon */
  .cart-icon {
    display: flex;
    align-items: center;
    gap: 8px;
    position: relative;
    color: rgba(255, 255, 255, 0.8);
  }

  .cart-icon:hover {
    color: #00ff41;
  }

  .cart-icon svg {
    color: inherit;
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #00ff41;
    color: #000;
    font-size: 11px;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  .account-icon {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.8);
  }

  .account-icon:hover {
    color: #00ff41;
  }

  .account-icon svg {
    color: inherit;
  }
  
  .account-name {
    font-size: 14px;
  }
  
  .login-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .login-btn:hover {
    background: rgba(0, 255, 65, 0.1);
    color: #00ff41;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    position: relative;
    z-index: 10001;
  }

  .mobile-menu-btn span {
    width: 25px;
    height: 3px;
    background: #00ff41;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 999998;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .mobile-menu-overlay.active {
    display: block;
    opacity: 1;
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100%;
    background: linear-gradient(135deg, #0a0a0a 0%, #0d1b0d 100%);
    border-left: 1px solid rgba(0, 255, 65, 0.2);
    z-index: 999999;
    padding: 85px 30px 30px;
    transition: right 0.3s ease;
    overflow-y: auto;
  }

  .mobile-menu.active {
    right: 0;
  }

  .mobile-nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mobile-nav-links li {
    margin-bottom: 20px;
  }

  .mobile-nav-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1.2rem;
    display: block;
    padding: 12px 0;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(0, 255, 65, 0.1);
  }

  .mobile-nav-links a:hover {
    color: #00ff41;
    padding-left: 10px;
  }

  .mobile-cart,
  .mobile-account,
  .mobile-login {
    display: flex;
    align-items: center;
    gap: 12px;
    color: rgba(255, 255, 255, 0.8);
  }

  .mobile-cart:hover,
  .mobile-account:hover,
  .mobile-login:hover {
    color: #00ff41;
  }

  .mobile-cart svg,
  .mobile-account svg,
  .mobile-login svg {
    color: inherit;
  }

  .mobile-cart-icon {
    position: relative;
    display: flex;
    align-items: center;
  }

  .mobile-cart-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #00ff41;
    color: #000;
    font-size: 11px;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  .mobile-logout {
    color: #ff4141 !important;
  }

  .mobile-logout:hover {
    color: #ff6b6b !important;
  }

  /* Mobile CTA Button */
  .mobile-cta-btn {
    background: linear-gradient(135deg, #00ff41, #00cc33) !important;
    color: #000 !important;
    padding: 15px 20px !important;
    border-radius: 10px !important;
    font-weight: 700 !important;
    text-align: center;
    margin-top: 20px;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.3);
  }

  .mobile-cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.5);
    padding-left: 20px !important;
  }

  @media (max-width: 968px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }

  @media (max-width: 640px) {
    .mobile-menu {
      width: 100%;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const mobileMenu = document.querySelector('.mobile-menu');
  const mobileMenuOverlay = document.querySelector('.mobile-menu-overlay');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-links a');

  // Toggle mobile menu
  function toggleMobileMenu() {
    mobileMenuBtn.classList.toggle('active');
    mobileMenu.classList.toggle('active');
    mobileMenuOverlay.classList.toggle('active');
    document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
  }

  // Close mobile menu
  function closeMobileMenu() {
    mobileMenuBtn.classList.remove('active');
    mobileMenu.classList.remove('active');
    mobileMenuOverlay.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Smooth scroll to anchor with navbar offset
  function smoothScrollToAnchor(targetId) {
    const targetElement = document.getElementById(targetId);
    if (targetElement) {
      const navbarHeight = 70;
      const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - navbarHeight;
      
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    }
  }

  // Open/close menu
  if (mobileMenuBtn) {
    mobileMenuBtn.addEventListener('click', toggleMobileMenu);
  }

  // Close menu when overlay clicked
  if (mobileMenuOverlay) {
    mobileMenuOverlay.addEventListener('click', closeMobileMenu);
  }

  // Handle mobile nav link clicks
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      const href = this.getAttribute('href');
      
      // Check if it's a hash link (anchor on same page)
      if (href.startsWith('/#')) {
        const targetId = href.substring(2);
        
        // Check if we're on the homepage
        if (window.location.pathname === '/' || window.location.pathname === '/index') {
          e.preventDefault();
          closeMobileMenu();
          
          // Wait for menu to close, then scroll
          setTimeout(() => {
            smoothScrollToAnchor(targetId);
          }, 300);
        } else {
          // On a different page - let it navigate naturally, will scroll on page load
          closeMobileMenu();
        }
      } else {
        // For external links, close immediately
        closeMobileMenu();
      }
    });
  });

  // Handle desktop nav anchor links
  const desktopNavLinks = document.querySelectorAll('.nav-links a[href^="/#"]');
  desktopNavLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      const href = this.getAttribute('href');
      const targetId = href.substring(2);
      
      // Check if we're on the homepage
      if (window.location.pathname === '/' || window.location.pathname === '/index') {
        e.preventDefault();
        smoothScrollToAnchor(targetId);
      }
      // Otherwise let it navigate to homepage with hash
    });
  });

  // Handle hash on page load (when coming from another page)
  if (window.location.hash) {
    const targetId = window.location.hash.substring(1);
    setTimeout(() => {
      smoothScrollToAnchor(targetId);
    }, 100);
  }

  // Close menu on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && mobileMenu.classList.contains('active')) {
      closeMobileMenu();
    }
  });
});
</script>