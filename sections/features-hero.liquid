{% comment %}
  sections/features-hero.liquid
  Hero section specifically for features page with Trading Toolkit layout
{% endcomment %}

<section class="hero features-hero">
  <div class="container">
    <div class="hero-layout">
      <div class="hero-content">
        <h1 class="hero-title animate-hero-left">
          {{ section.settings.hero_title_line1 }}
        </h1>
        
        <h2 class="hero-tagline animate-hero-left">
          <span class="gradient-text">{{ section.settings.hero_title_line2 }}</span>
        </h2>
        
        <p class="hero-subtitle animate-hero-left">{{ section.settings.hero_subtitle }}</p>
        
        <div class="hero-cta animate-hero-left">
          <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary">
            {{ section.settings.primary_button_text }}
          </a>
        </div>
      </div>
      
      <div class="hero-features-panel animate-hero-right">
        {% for block in section.blocks %}
          {% if block.type == 'feature_item' %}
            <div class="feature-item" {{ block.shopify_attributes }}>
              <div class="feature-icon">
                {% if block.settings.icon_type == 'chart' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
                    <line x1="18" y1="20" x2="18" y2="8"></line>
                    <line x1="12" y1="20" x2="12" y2="4"></line>
                    <line x1="6" y1="20" x2="6" y2="12"></line>
                  </svg>
                {% elsif block.settings.icon_type == 'settings' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M12.22 2h-.44a2 2 0 00-2 2v.18a2 2 0 01-1 1.73l-.43.25a2 2 0 01-2 0l-.15-.08a2 2 0 00-2.73.73l-.22.38a2 2 0 00.73 2.73l.15.1a2 2 0 011 1.72v.51a2 2 0 01-1 1.74l-.15.09a2 2 0 00-.73 2.73l.22.38a2 2 0 002.73.73l.15-.08a2 2 0 012 0l.43.25a2 2 0 011 1.73V20a2 2 0 002 2h.44a2 2 0 002-2v-.18a2 2 0 011-1.73l.43-.25a2 2 0 012 0l.15.08a2 2 0 002.73-.73l.22-.39a2 2 0 00-.73-2.73l-.15-.08a2 2 0 01-1-1.74v-.5a2 2 0 011-1.74l.15-.09a2 2 0 00.73-2.73l-.22-.38a2 2 0 00-2.73-.73l-.15.08a2 2 0 01-2 0l-.43-.25a2 2 0 01-1-1.73V4a2 2 0 00-2-2z"></path>
                  </svg>
                {% elsif block.settings.icon_type == 'filter' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
                  </svg>
                {% elsif block.settings.icon_type == 'globe' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="2" y1="12" x2="22" y2="12"></line>
                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                  </svg>
                {% endif %}
              </div>
              <div class="feature-content">
                <h3 class="feature-title">{{ block.settings.title }}</h3>
                <p class="feature-description">{{ block.settings.description }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="hero-bg"></div>
</section>

<style>
  .features-hero {
    background: linear-gradient(135deg, #0a1a0f 0%, #051008 100%);
    position: relative;
    overflow: hidden;
  }

  .features-hero .hero-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    min-height: 80vh;
    padding: 60px 0;
  }

  .features-hero .hero-content {
    max-width: 600px;
    text-align: left;
  }

  .features-hero .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin-bottom: 10px;
    color: white;
    line-height: 1.1;
  }

  .features-hero .hero-tagline {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 30px;
    line-height: 1.1;
    white-space: nowrap;
  }

  .features-hero .gradient-text {
    background: linear-gradient(90deg, #00ff41 0%, #00cc33 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .features-hero .hero-subtitle {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 40px;
    max-width: 550px;
  }

  .features-hero .hero-cta .btn-primary {
    background: #00ff41;
    color: #000;
    padding: 18px 40px;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .features-hero .hero-cta .btn-primary:hover {
    background: #00cc33;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.3);
  }

  .features-hero .hero-features-panel {
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.15);
    border-radius: 24px;
    padding: 50px 40px;
    max-width: 550px;
    opacity: 0;
    transform: translateX(50px);
    animation: slideInRight 0.8s ease-out 0.3s forwards;
  }

  @keyframes slideInRight {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .features-hero .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 24px;
    padding: 28px 0;
    border-bottom: 1px solid rgba(0, 255, 65, 0.08);
  }

  .features-hero .feature-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .features-hero .feature-item:first-child {
    padding-top: 0;
  }

  .features-hero .feature-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.1), rgba(0, 255, 65, 0.05));
    border: 2px solid rgba(0, 255, 65, 0.3);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .features-hero .feature-icon svg {
    width: 28px;
    height: 28px;
    color: #00ff41;
  }

  .features-hero .feature-content {
    flex: 1;
    text-align: left;
  }

  .features-hero .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-bottom: 6px;
    line-height: 1.3;
  }

  .features-hero .feature-description {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.5;
  }

  .features-hero .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 50%, rgba(0, 255, 65, 0.05) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .features-hero .container {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 968px) {
    .features-hero .hero-layout {
      grid-template-columns: 1fr;
      gap: 50px;
      padding: 40px 0;
    }

    .features-hero .hero-content {
      text-align: left;
    }

    .features-hero .hero-features-panel {
      max-width: 100%;
      padding: 40px 30px;
    }

    .features-hero .feature-item {
      padding: 20px 0;
    }

    .features-hero .hero-title {
      font-size: 2.5rem;
    }

    .features-hero .hero-tagline {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    .features-hero .hero-features-panel {
      padding: 30px 20px;
    }

    .features-hero .feature-icon {
      width: 48px;
      height: 48px;
    }

    .features-hero .feature-icon svg {
      width: 24px;
      height: 24px;
    }

    .features-hero .hero-cta .btn-primary {
      padding: 16px 32px;
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Features Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_title_line1",
      "label": "Title Line 1",
      "default": "Trading Toolkit"
    },
    {
      "type": "text",
      "id": "hero_title_line2",
      "label": "Title Line 2 (Gradient)",
      "default": "Strategies & Support"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Subtitle",
      "default": "Professional Sharp Shooter indicators for TradingView, battle-tested trading strategies, position management tools, and an active Discord community with dedicated support."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Get Started Today"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Feature Item",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "options": [
            {
              "value": "chart",
              "label": "Chart"
            },
            {
              "value": "settings",
              "label": "Settings"
            },
            {
              "value": "filter",
              "label": "Filter"
            },
            {
              "value": "globe",
              "label": "Globe"
            }
          ],
          "default": "chart"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Feature description"
        }
      ]
    }
  ]
}
{% endschema %}
