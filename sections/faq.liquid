<section id="faq" class="faq">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>
    <div class="faq-list">
      {% for block in section.blocks %}
        <div class="faq-item">
          <button class="faq-question">
            <span>{{ block.settings.question }}</span>
            <span class="faq-icon">+</span>
          </button>
          <div class="faq-answer">
            <p>{{ block.settings.answer }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Everything you need to know about Market Sniper"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Your question here?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "question": "Can I cancel my subscription?",
            "answer": "Yes, you can cancel your subscription anytime through your Shopify account or by emailing jesse@marketsniper.pro. If you cancel, you will receive a refund and be automatically removed from the Discord server once the refund is processed."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "How do refunds work?",
            "answer": "When you cancel your subscription, a refund will be processed through Shopify. Once the refund is completed, you will be automatically removed from the Discord server and lose access to all subscription benefits."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "Can I upgrade or downgrade my subscription?",
            "answer": "Yes, email jesse@marketsniper.pro for upgrade or downgrade requests, and we'll help you switch plans."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "Do you offer a discount?",
            "answer": "Yes! The yearly plan saves you 30% compared to paying monthly. That's like getting 4 months free!"
          }
        }
      ]
    }
  ]
}
{% endschema %}