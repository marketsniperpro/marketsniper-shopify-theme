{% comment %}
  sections/what-you-get.liquid
  What You Get section with updated SVG icons and button
{% endcomment %}

<!-- What You Get section -->
<section class="what-you-get-section" id="what-you-get">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-card" {{ block.shopify_attributes }}>
          <div class="feature-icon">
            {% if block.settings.title == "TradingView Integration" %}
              <!-- Chart/Indicator Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="20" x2="18" y2="10"></line>
                <line x1="12" y1="20" x2="12" y2="4"></line>
                <line x1="6" y1="20" x2="6" y2="14"></line>
              </svg>
            {% elsif block.settings.title == "Real-Time Trading Alerts" %}
              <!-- Alert/Bell Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
              </svg>
            {% elsif block.settings.title == "Strategy Configuration Support" %}
              <!-- Settings/Configuration Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12.22 2h-.44a2 2 0 00-2 2v.18a2 2 0 01-1 1.73l-.43.25a2 2 0 01-2 0l-.15-.08a2 2 0 00-2.73.73l-.22.38a2 2 0 00.73 2.73l.15.1a2 2 0 011 1.72v.51a2 2 0 01-1 1.74l-.15.09a2 2 0 00-.73 2.73l.22.38a2 2 0 002.73.73l.15-.08a2 2 0 012 0l.43.25a2 2 0 011 1.73V20a2 2 0 002 2h.44a2 2 0 002-2v-.18a2 2 0 011-1.73l.43-.25a2 2 0 012 0l.15.08a2 2 0 002.73-.73l.22-.39a2 2 0 00-.73-2.73l-.15-.08a2 2 0 01-1-1.74v-.5a2 2 0 011-1.74l.15-.09a2 2 0 00.73-2.73l-.22-.38a2 2 0 00-2.73-.73l-.15.08a2 2 0 01-2 0l-.43-.25a2 2 0 01-1-1.73V4a2 2 0 00-2-2z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
            {% elsif block.settings.title == "Strategy Library" %}
              <!-- Strategy/Target Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <circle cx="12" cy="12" r="6"></circle>
                <circle cx="12" cy="12" r="2"></circle>
              </svg>
            {% elsif block.settings.title == "Exclusive Discord Community" %}
              <!-- Community Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 00-3-3.87"></path>
                <path d="M16 3.13a4 4 0 010 7.75"></path>
              </svg>
            {% elsif block.settings.title == "Regular Updates" %}
              <!-- Update/Refresh Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="23 4 23 10 17 10"></polyline>
                <polyline points="1 20 1 14 7 14"></polyline>
                <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
              </svg>
            {% else %}
              <!-- Default Checkmark Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            {% endif %}
          </div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank %}
      <div class="features-cta">
        <a href="{{ section.settings.button_link }}" class="btn btn-primary">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .what-you-get-section {
    padding: 80px 20px;
    background: rgba(10, 10, 10, 0.5);
    min-height: 400px;
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .section-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 16px;
    color: white;
  }

  .section-header p {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto 50px;
  }

  .feature-card {
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 20px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    border-color: rgba(0, 255, 65, 0.5);
    background: rgba(0, 255, 65, 0.05);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.2);
  }

  .feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 25px;
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.1), rgba(0, 255, 65, 0.05));
    border: 2px solid rgba(0, 255, 65, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.2), rgba(0, 255, 65, 0.1));
    border-color: #00ff41;
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(0, 255, 65, 0.4);
  }

  .feature-icon svg {
    width: 40px;
    height: 40px;
    color: #00ff41;
    stroke-width: 2;
  }

  .feature-card h3 {
    color: white;
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 15px;
  }

  .feature-card p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    font-size: 1rem;
  }

  .features-cta {
    text-align: center;
    margin-top: 20px;
  }

  .btn {
    display: inline-block;
    padding: 18px 50px;
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    text-decoration: none;
    border-radius: 10px;
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.4);
    border: none;
    cursor: pointer;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.6);
    background: linear-gradient(135deg, #00ff41, #00dd3a);
  }

  .btn-primary {
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
  }

  @media (min-width: 1200px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr) !important;
    }
  }

  @media (max-width: 968px) {
    .what-you-get-section {
      padding: 60px 15px;
    }

    .container {
      padding: 0 15px;
      max-width: 100%;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .feature-card {
      padding: 30px 20px;
    }

    .features-cta {
      padding: 0 15px;
      margin-top: 30px;
    }

    .btn {
      width: 100%;
      max-width: 100%;
      padding: 16px 30px;
      font-size: 1rem;
      box-sizing: border-box;
    }
  }

  @media (max-width: 640px) {
    .what-you-get-section {
      padding: 50px 10px;
    }

    .container {
      padding: 0 10px;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .features-cta {
      padding: 0 10px;
    }

    .btn {
      padding: 16px 40px;
      font-size: 1rem;
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "What You Get",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "What You Get"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Complete trading solution with everything you need"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text (optional)"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link (optional)"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "Feature description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "What You Get"
    }
  ]
}
{% endschema %}