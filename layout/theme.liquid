<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>
    {{ page_title }}
    {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
    {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}">

  <meta property="og:site_name" content="{{ shop.name }}">
  <meta property="og:url" content="{{ canonical_url }}">
  <meta property="og:title" content="{{ page_title | default: shop.name }}">
  <meta property="og:type" content="website">
  <meta property="og:description" content="{{ page_description | default: shop.description | escape }}">

  <link rel="icon" type="image/jpg" href="{{ 'logo.jpg' | asset_url }}">

  {{ content_for_header }}

  <!-- CSS Files -->
  <link rel="stylesheet" href="{{ 'reset.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'animations.css' | asset_url }}?v=4">
</head>
<body class="template-{{ template.name | handle }}">

  <main id="MainContent" role="main">
    {{ content_for_layout }}
  </main>

  <!-- JavaScript Files -->
  <script src="{{ 'utils.js' | asset_url }}" defer></script>
  <script src="{{ 'animations.js' | asset_url }}" defer></script>
  <script src="{{ 'main.js' | asset_url }}" defer></script>

<!-- Supabase Authentication Integration -->
<script>
(async function() {
  try {
    // Load Supabase SDK
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2';
    
    script.onload = async function() {
      const { createClient } = window.supabase;
      const supabaseClient = createClient(
        'https://vxyfonowbokftijkufzp.supabase.co',
        'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InZ4eWZvbm93Ym9rZnRpamt1ZnpwIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MzA5ODc4MDUsImV4cCI6MjA0NjU2MzgwNX0.pU5VCCipYwKN7J-Hm6UNHFNdOPyL6EkDrLTbQKRJfTc'
      );
      
      // Use getSession() to check cookies across domains
      const { data: { session } } = await supabaseClient.auth.getSession();
      
      if (session?.user) {
        const user = session.user;
        
        // Fetch profile
        const { data: profile } = await supabaseClient
          .from('profiles')
          .select('shopify_customer_id')
          .eq('id', user.id)
          .single();
        
        if (profile?.shopify_customer_id) {
          // Fetch full name from shopify_customers
          const { data: shopifyCustomer } = await supabaseClient
            .from('shopify_customers')
            .select('full_name')
            .eq('shopify_customer_id', profile.shopify_customer_id)
            .single();
          
          if (shopifyCustomer?.full_name) {
            const firstName = shopifyCustomer.full_name.split(' ')[0];
            
            // Update desktop nav
            const desktopAccount = document.querySelector('.account-icon');
            const desktopLogin = document.querySelector('.login-btn');
            const desktopName = document.querySelector('.account-name');
            
            if (desktopName) desktopName.textContent = firstName;
            if (desktopAccount) desktopAccount.style.display = 'flex';
            if (desktopLogin) desktopLogin.style.display = 'none';
            
            // Update mobile nav
            const mobileAccount = document.querySelector('.mobile-account');
            const mobileLogin = document.querySelector('.mobile-login');
            const mobileAccountName = document.querySelector('.mobile-account-name');
            
            if (mobileAccountName) mobileAccountName.textContent = firstName;
            if (mobileAccount) mobileAccount.style.display = 'flex';
            if (mobileLogin) mobileLogin.style.display = 'none';
          }
        }
      }
    };
    
    document.head.appendChild(script);
  } catch (error) {
    console.error('Auth check error:', error);
  }
})();
</script>

</body>
</html>
